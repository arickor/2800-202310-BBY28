<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Save Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #1a1a1a;
        font-family: "Ubuntu", sans-serif;
      }
      label {
        color: #ffffff;
        display: block;
        margin-bottom: 5px;
        font-size: larger;
        text-shadow: 0px 2px 5px rgba(0, 0, 0, 0.25);
      }
      .container {
        align-items: center;
        background-color: #808080;
        margin-left: 10%;
        margin-right: 10%;
        padding-top: 5%;
        padding-left: 10%;
        padding-right: 10%;
        padding-bottom: 5%;
        border-radius: 20px;
      }
      .form-select {
        background-color: #9f9d9d;
        padding: 10px;
        padding-top: 10%;
        padding-bottom: 10%;
        margin: 5px 0;
        border-radius: 20px;
        width: 100%;
        font-size: large;
        text-shadow: 0px 2px 5px rgba(0, 0, 0, 0.25);
        text-align: center;
      }
      .form-select,
      option {
        color: #ffffff;
        /* text-align: center; */
        font-size: large;
        text-shadow: 0px 2px 5px rgba(0, 0, 0, 0.25);
      }
      .form-control {
        background-color: #9f9d9d;
        padding-top: 10%;
        padding-bottom: 10%;
        margin-bottom: 5%;
        border-radius: 20px;
        border: none;
      }
      .form-control,
      input {
        color: #ffffff;
        text-align: center;
        font-size: large;
        text-shadow: 0px 2px 5px rgba(0, 0, 0, 0.25);
      }
      img {
        width: 100px;
        height: 100px;
      }
      nav ul {
        list-style: none;
        display: flex; /* Add this line to display the list items as flex items */
        margin-top: 10%;
      }

      nav ul li {
        display: inline-block; /* Add this line to display the list items as inline-block elements */
        margin-right: 10px; /* Add this line to add some spacing between the list items */
      }
      header nav ul li a img {
        margin-left: -10%;
        margin-top: 40%;
        margin-bottom: -5%;
      }
      #home-icon {
        width: 80px;
        height: 80px;
        margin-top: 63%;
      }
      #edit-icon {
        width: 90px;
        height: 90px;
        margin-top: 8%;
        margin-left: 15%;
      }
      .btn {
        background: none;
        border: none;
        margin-left: 25%;
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li>
            <a href="/"><img src="home.png" alt="Home" id="home-icon" /></a>
          </li>
        </ul>
      </nav>
    </header>
    <div class="container">
      <form action="/createProfile" method="POST">
        <label for="floatingInput">Username</label>
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="floatingInput"
            value="<%= username %>"
            readonly
          />
        </div>
        <label for="floatingInput">Email</label>
        <div class="form-floating mb-3">
          <input
            type="email"
            class="form-control"
            id="floatingInput"
            value="<%= email %>"
            readonly
          />
        </div>
        <label for="floatingInput">Primary gaming platform</label>
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="floatingInput"
            value="<%= primaryGamingPlatform %>"
            readonly
          />
        </div>
        <button
          class="w-100 btn btn-lg btn-primary"
          onclick="goProfile()"
          type="button"
        >
          <img src="edit.png" alt="Edit" id="edit-icon" style="filter: invert(100%);" />
        </button>
      </form>
    </div>
    <script>
      function goProfile() {
        window.location.href = "/createProfile";
      }
    </script>
  </body>
</html>
