    <script>
      const imageContainer = document.getElementById('imageContainer');
      const mainImage = document.getElementById('mainImage');
      const imageOverlay = document.getElementById('imageOverlay');
  
      let startX = 0;
      let distX = 0;
  
      let images = [];
      // { 
      //   src: '/ow2.jpg', 
      //   name: 'Overwatch 2', 
      //   genre: 'FPS/Action/Team', 
      //   releaseDate: '2022'
      // },
